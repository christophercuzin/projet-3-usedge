{% if "open-question" in templateComponent.component.name   %}
{% if "open-question" in answer.name  %}
    <div class="research-open-question-creation-modal" id="open-question-creation-modal">
        <input type="hidden" name="request-component-id-{{ templateComponent.component.id }}" value="{{ templateComponent.component.id }}">
            <input type="hidden" name="request-component-question-{{ templateComponent.component.id }}" value="{{templateComponent.component.question}}">
        <input class="request-name-input" type="hidden" name="request-component-name-{{ templateComponent.component.id }}" value="{{ answer.name  }}">
        <p class="research-open-question-template-question" id="open-question-template-question">
            {{ templateComponent.component.question }}
            {% if templateComponent.component.isMandatory %}
                <span class="research-open-question-red-star" id="open-question-red-star">*</span>
            {% endif %}
        </p>
        {% if templateComponent.component.isMandatory %}
        <div class="research-open-question-template-answers">
                <textarea class="form-control research-open-question-text-area request-answer-input" name="answer-{{ templateComponent.component.id }}" id="research-open-question-text-area"
                placeholder="Default state" wrap required></textarea>
                <label for="answer-open-question" 
                class="research-open-question-template-answer-label" id="open-question-template-answer-label">
                </label>
        </div>
        {% else %}
        <div class="research-open-question-template-answers">
                <textarea class="form-control research-open-question-text-area request-answer-input" name="answer-{{ templateComponent.component.id }}" id="research-open-question-text-area"
                placeholder="Default state" wrap></textarea>
                <label for="answer-open-question" 
                class="research-open-question-template-answer-label" id="open-question-template-answer-label">
                </label>
        </div>
        {% endif %}

        <div class="research-open-question-template-helpertext">
            {% if  templateComponent.component.addAHelpertext is same as true  %}
                <p>{{ templateComponent.component.helperText }}<p>
            {% endif %}
        </div>
    </div>
{% endif %}
{% endif %}