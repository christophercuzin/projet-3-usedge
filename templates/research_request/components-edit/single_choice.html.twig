{% if "single-choice" in templateComponent.component.name   %}
{% if "single-choice" in answer.name  %}
    <div class="request-single-choice">
        <div class="request-single-choice-content">
            <p class="request-single-choice-question" id="single-choice-template-question">
            <input type="hidden" name="request-component-id-{{ templateComponent.component.id }}" value="{{ templateComponent.component.id }}">
            <input type="hidden" name="request-component-question-{{ templateComponent.component.id }}" value="{{templateComponent.component.question}}">
            <input class="request-name-input" type="hidden" name="request-component-name-{{ templateComponent.component.id }}" value="{{ answer.name  }}">
                {{templateComponent.component.question}}
                {% if templateComponent.component.isMandatory %}
                    <span class="single-choice-red-star" id="single-choice-red-star">*</span>
                {% endif %}
            </p>
            {% if templateComponent.component.isMandatory %}
            <div class="request-single-choice-answers">
                {% for answer in templateComponent.component.answers %}
                    <div class="request-single-choice-template-answer">
                        <input class="request-answer-input" type="radio" value="{{answer.answer}}" name="answer-{{ templateComponent.component.id }}" required>
                        <label for="single-choice-answer" class="single-choice-template-answer-label" id="single-choice-template-answer-label">
                        {{answer.answer}}
                        </label>
                    </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="request-single-choice-answers">
                {% for answer in templateComponent.component.answers %}
                    <div class="request-single-choice-template-answer">
                        <input class="request-answer-input" type="radio" value="{{answer.answer}}" name="answer-{{ templateComponent.component.id }}">
                        <label for="single-choice-answer" class="single-choice-template-answer-label" id="single-choice-template-answer-label">
                        {{answer.answer}}
                        </label>
                    </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
{% endif %}
{% endif %}