{% for answerRequest in answerRequests %}
    {% for answers in researchRequest.answers %}
        {% for key, requestAnswer in answers %}
            {% if "single-choice" in requestComponent.component.name and 
            requestComponent.component.question is same as answerRequest.question and
            key is same as name and 
            answerRequest.id is same as answers[0] %}
                <div class="request-single-choice">
                    <div class="request-single-choice-content">
                        <p class="request-single-choice-question" id="single-choice-template-question">
                        <input type="hidden" name="request-component-id-{{ requestComponent.component.id }}" value="{{ requestComponent.component.id }}">
                        <input type="hidden" name="request-component-question-{{ requestComponent.component.id }}" value="{{requestComponent.component.question}}">
                        <input class="request-name-input" type="hidden" name="request-component-name-{{ requestComponent.component.id }}" value="{{ requestComponent.component.name }}">
                            {{requestComponent.component.question}}
                            {% if requestComponent.component.isMandatory %}
                                <span class="single-choice-red-star" id="single-choice-red-star">*</span>
                            {% endif %}
                        </p>
                        {% if requestComponent.component.isMandatory %}
                            <div class="request-single-choice-answers">
                                {% for answer in requestComponent.component.answers %}
                                    {% if answer.answer in  requestAnswer %}
                                        <div class="request-single-choice-template-answer">
                                            <input class="request-answer-input" type="radio" value="{{answer.answer}}" name="answer-{{ requestComponent.component.id }}" required checked>
                                            <label for="single-choice-answer" class="single-choice-template-answer-label" id="single-choice-template-answer-label">
                                            {{answer.answer}}
                                            </label>
                                        </div>
                                    {% else %}
                                        <div class="request-single-choice-template-answer">
                                            <input class="request-answer-input" type="radio" value="{{answer.answer}}" name="answer-{{ requestComponent.component.id }}" required>
                                            <label for="single-choice-answer" class="single-choice-template-answer-label" id="single-choice-template-answer-label">
                                            {{answer.answer}}
                                            </label>
                                        </div>  
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% else %}
                        <div class="request-single-choice-answers">
                            {% for answer in requestComponent.component.answers %}
                                {% if answer.answer in requestAnswer %}
                                    <div class="request-single-choice-template-answer">
                                        <input class="request-answer-input" type="radio" value="{{answer.answer}}" name="answer-{{ requestComponent.component.id }}" checked>
                                        <label for="single-choice-answer" class="single-choice-template-answer-label" id="single-choice-template-answer-label">
                                        {{answer.answer}}
                                        </label>
                                    </div>
                                {% else %}
                                    <div class="request-single-choice-template-answer">
                                        <input class="request-answer-input" type="radio" value="{{answer.answer}}" name="answer-{{ requestComponent.component.id }}">
                                        <label for="single-choice-answer" class="single-choice-template-answer-label" id="single-choice-template-answer-label">
                                        {{answer.answer}}
                                        </label>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}
{% endfor %}